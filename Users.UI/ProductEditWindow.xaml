<Window x:Class="Users.UI.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:model="clr-namespace:DataWpf.Model;assembly=DataWpf.Model"
        xmlns:local="clr-namespace:Users.UI"
        mc:Ignorable="d"
       Title="Add product" Height="300" Width="300" Loaded="Window_Loaded">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="label" Content="Product"/>
        <TextBox Text="{Binding CurrentProduct.Name, ValidatesOnNotifyDataErrors=True}" x:Name="firstNameTxtBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="165" Padding="0" Margin="0,0,0,10">
        </TextBox>
        <Label x:Name="label1" Content="Initial Price"/>
        <TextBox Text="{Binding CurrentProduct.Price}" x:Name="lastNameTxtBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Margin="0,0,0,10"/>

        <Button Command="{Binding SaveCommand}" x:Name="button" Content="Save" HorizontalAlignment="Right"  VerticalAlignment="Top" Width="75" Click="button_Click"/>
    </StackPanel>
    
</Window>
